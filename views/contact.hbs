    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
   <!-- Navigation -->
   <nav>
    <div class="logo">Student Travel Egypt</div>
    <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/destinations">Destinations</a></li>
        <li><a href="/flights">Flights</a></li>
        <li><a href="/contact">Contact</a></li>
        <li><a href="/auth/register" class="register-btn">Register</a></li>
        <li><a href="/auth/signin" class="signin-btn">Sign In</a></li>
        <li><a href="/booking" class="booking-btn">Book Now</a></li>
    </ul>

</nav>

    <div class="contact-wrapper">
        <!-- Contact Information Cards -->
        <div class="contact-cards">
            <div class="card">
                <i class="fas fa-map-marker-alt"></i>
                <h3>Address</h3>
                <p>24 Al Bustan St, Bab Al Louq, Abdeen</p>
                <p>Above El Ezaby pharmacy</p>
            </div>

            <div class="card">
                <i class="fas fa-phone-alt"></i>
                <h3>Phone</h3>
                <p>010 02449889</p>
                <p>Sat-Thu: 11AM - 5PM</p>
            </div>

            <div class="card">
                <i class="fas fa-envelope"></i>
                <h3>Email</h3>
                <p>info@adventuretours.com</p>
                <p>support@adventuretours.com</p>
            </div>
        </div>

        <!-- Contact Form Section -->
        <div class="contact-form-section">
            <div class="form-container">
                <h2>Send us a Message</h2>
                <form class="contact-form">
                    <div class="form-row">
                        <div class="form-group">
                            <input type="text" id="name" required>
                            <label for="name">Your Name</label>
                        </div>
                        <div class="form-group">
                            <input type="email" id="email" required>
                            <label for="email">Your Email</label>
                        </div>
                    </div>

                    <div class="form-group">
                        <input type="text" id="subject" required>
                        <label for="subject">Subject</label>
                    </div>

                    <div class="form-group">
                        <textarea id="message" rows="5" required></textarea>
                        <label for="message">Your Message</label>
                    </div>

                    <button type="submit">Send Message</button>
                </form>
            </div>
        </div>

        <!-- Map Section -->
        <div class="map-section">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3453.710420442654!2d31.238743776607073!3d30.04516457492337!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x145840b8f37fed13%3A0x79b92ebef81ac0d4!2sStudent%20Travel!5e0!3m2!1sen!2seg!4v1734992092677!5m2!1sen!2seg",
            width="100%"
             height="400" 
             style="border:0;"
            allowfullscreen=""
            loading="lazy" 
            referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
    </div>

    <!-- Footer Section -->
    <footer class="footer">
        <div class="container">

            <div class="footer-column">
                <h3>Quick Links</h3>
                <ul>
                        <li><a href="/">Home</a></li>
                        <li><a href="/destinations">Destinations</a></li>
                        <li><a href="/about">About</a></li>
                        <li><a href="/reviews">Reviews</a></li>
                        <li><a href="/services">Services</a></li>
                        <li><a href="/contact">Contact</a></li>
                </ul>
            </div>

            <div class="footer-column">
                <h3>Extra Links</h3>
                <ul>
                    <li><a href="#">Ask Questions</a></li>
                    <li><a href="#">About Us</a></li>
                    <li><a href="#">Privacy Policy</a></li>
                    <li><a href="#">Terms Of Use</a></li>
                </ul>
            </div>

            <div class="footer-column">
                <h3>Contact Info</h3>
                <ul>
                    <li><i class="fas fa-phone"></i>010 02449889</li>
                    <li><i class="fas fa-envelope"></i> Shaikhanas@gmail.com</li>
                    <li><i class="fas fa-map-marker-alt"></i> 24 Al Bustan St, Bab Al Louq, Abdeen</li>
                </ul>
            </div>

            <div class="footer-column">
                <h3>Follow Us</h3>
                <ul>
                    <li><a href="https://www.facebook.com/Student.travel.egypt"><i class="fab fa-facebook-f"></i> Facebook</a></li>
